<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/linear"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.example.login.MyTextview
        android:id="@+id/marqueetext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:text="Everything that lives is designed to end. We are perpetually trapped in a never-ending spiral of life and death. Is this a curse? Or some kind of punishment? I often think about the god who bleesed us with this cryptic puzzle,and wonder if we'll ever have the chance to kill him."
        />
<RelativeLayout
    android:layout_marginTop="100dp"
    android:layout_width="300dp"
    android:background="#C8BFBF"
    android:layout_gravity="center_horizontal"
    android:padding="10dp"
    android:layout_height="40dp">
<ImageView
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:id="@+id/image_phone"
    android:src="@drawable/ic_baseline_phone_android_24"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    />
    <AutoCompleteTextView
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:id="@+id/phone_edit"
        android:layout_marginLeft="10dp"
        android:completionThreshold="1"
        android:background="#C8BFBF"
        android:inputType="number"
        android:hint="PhoneNumber"
        android:layout_toRightOf="@+id/image_phone"/>
</RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:background="#C8BFBF"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:layout_height="40dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/image_pwd"
            android:src="@drawable/ic_baseline_security_24"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />
        <EditText
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="#C8BFBF"
            android:hint="Password"
            android:inputType="numberPassword"
            android:layout_toRightOf="@+id/image_pwd"/>
    </RelativeLayout>
    <Button
        android:id="@+id/login"
        android:layout_marginTop="30dp"
        android:layout_width="250dp"
        android:background="#D1CA44"
        android:layout_height="wrap_content"
        android:text="登录"
        android:layout_gravity="center_horizontal"/>
    <Switch
        android:layout_marginTop="200dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/switch_night"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="夜间模式"/>
</LinearLayout>